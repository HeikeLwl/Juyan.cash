<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/padding_6"
              android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <jufeng.juyancash.ui.customview.LCustomeRadioGroup
                android:id="@+id/lcustomeradiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/layout_background_0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="操作"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="手机号"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="排队单号"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="取号时间"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="就餐人数"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grid_head_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_4"
                android:text="叫号次数"
                android:textColor="@color/dark"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/padding_6">

        <Button
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_selector"
            android:text="叫号"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_12"
            android:background="@drawable/red_button_selector"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

</LinearLayout>