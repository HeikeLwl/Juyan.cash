<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/padding_4">

    <LinearLayout
        android:id="@+id/item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/padding_4"
                android:text="特色牛排"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_16"/>

            <ImageView
                android:id="@+id/iv_dish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_guige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="(大杯)"
            android:textColor="@color/bluelight"
            android:textSize="@dimen/font_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_extra_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="@dimen/padding_4"
                android:paddingTop="@dimen/padding_4"
                android:text="+3.00"
                android:textColor="@color/theme_0_red_0"
                android:textSize="@dimen/font_16"/>


            <TextView
                android:id="@+id/tv_dish_ordered_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_4"
                android:drawableTop="@drawable/gray_line"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_4"
                android:text="已点：10.00"
                android:textColor="@color/theme_0_red_0"
                android:textSize="@dimen/font_12"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>