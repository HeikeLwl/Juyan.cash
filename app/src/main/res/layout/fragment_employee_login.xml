<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="员工登录"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_18"/>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:background="@drawable/login_edit_selector"
        android:drawableRight="@drawable/in"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="店名"
        android:textColor="@color/theme_0_red_0"
        android:textSize="@dimen/font_18"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/storeversion"
        android:background="@drawable/login_edit_selector"
        android:layout_marginTop="@dimen/padding_6"
        android:spinnerMode="dropdown"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:background="@drawable/login_edit_selector"
        android:focusable="true"
        android:hint="员工用户名"
        android:maxLines="1"
        android:textColor="@color/bluedark"
        android:textSize="@dimen/font_18"/>

    <EditText
        android:id="@+id/et_employee_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:background="@drawable/login_edit_selector"
        android:hint="员工密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/bluedark"
        android:textSize="@dimen/font_18"/>

    <CheckBox
        android:id="@+id/cb_save_pwd"
        style="@style/CheckBoxCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/padding_8"
        android:text="记住密码"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/btn_login_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"/>

</LinearLayout>