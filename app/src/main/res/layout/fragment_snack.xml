<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingTop="@dimen/padding_6"
              android:paddingBottom="@dimen/padding_6"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="32">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            android:paddingRight="@dimen/padding_4"
            android:layout_weight="32">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/container_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graydark"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_message_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/orange"
                        android:text="33条未读"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"/>

                    <TextView
                        android:id="@+id/tv_new_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/theme_0_red_0"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:drawableRight="@drawable/in_white"
                        android:paddingRight="@dimen/padding_4"
                        android:text="创建订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/graydark"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="68"
        android:paddingLeft="@dimen/padding_4">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/container_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>