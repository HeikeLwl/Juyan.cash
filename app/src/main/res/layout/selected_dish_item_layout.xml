<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_root_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_is_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/yes"/>

    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"/>-->

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_is_ordered"
        android:maxEms="6"
        android:maxLines="1"
        android:minEms="6"
        android:paddingLeft="@dimen/padding_4"
        android:text="凉拌黄瓜"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_16"/>

    <TextView
        android:id="@+id/tv_dish_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dish_name"
        android:layout_toRightOf="@id/iv_is_ordered"
        android:maxEms="6"
        android:maxLines="1"
        android:minEms="6"
        android:text="（规格，做法）"
        android:textColor="@color/bluelight"
        android:textSize="@dimen/font_14"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxEms="3"
        android:maxLines="1"
        android:minEms="2"
        android:text="22.00"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_16"/>

    <ImageButton
        android:id="@+id/ib_reduce"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_count"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/padding_6"
        android:paddingLeft="@dimen/padding_4"
        android:paddingRight="@dimen/padding_4"
        android:paddingTop="@dimen/padding_6"
        android:src="@drawable/btn_reduce_selector"/>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_count"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_6"
        android:paddingLeft="@dimen/padding_4"
        android:paddingRight="@dimen/padding_4"
        android:paddingTop="@dimen/padding_6"
        android:src="@drawable/btn_add_selector"/>

    <TextView
        android:id="@+id/tv_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxEms="6"
        android:maxLines="1"
        android:minEms="6"
        android:text="￥5555.00"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_dish_discount_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_dish_price"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxEms="6"
        android:minEms="6"
        android:text="95%"
        android:textColor="@color/theme_0_red_0"
        android:textSize="@dimen/font_12"/>

    <TextView
        android:id="@+id/tv_dish_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_dish_price"
        android:gravity="center"
        android:maxEms="6"
        android:minEms="6"
        android:text="￥4444.00"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_14"/>

    <ImageView
        android:id="@+id/iv_can_discount"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toLeftOf="@id/tv_dish_discount_rate"
        android:layout_margin="@dimen/padding_4"
        android:src="@drawable/iv_discount"/>

