<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_6">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="6"
        android:text="名称名称名称"
        android:textColor="@color/dark"
        android:textSize="@dimen/font_16"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:paddingTop="@dimen/padding_4"
        android:text="￥1.00/份"
        android:textColor="@color/bluelight"
        android:textSize="@dimen/font_14"/>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_add_normal"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:minEms="2"
        android:maxEms="2"
        android:text="120"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_add"
        android:padding="@dimen/padding_4"
        android:textColor="@color/theme_0_red_0"
        android:textSize="@dimen/font_14"/>

    <ImageButton
        android:id="@+id/ib_reduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_count"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_reduce_normal"/>

</RelativeLayout>