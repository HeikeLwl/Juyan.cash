<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/item_root_layout"
              android:background="@drawable/grid_even_background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="就餐时间"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/graydark"/>

    <TextView
        android:id="@+id/tv_schedule_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="客户姓名"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/graydark"/>

    <TextView
        android:id="@+id/tv_schedule_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="手机号码"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/graydark"/>

    <TextView
        android:id="@+id/tv_schedule_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="预定桌位"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/graydark"/>


    <TextView
        android:id="@+id/tv_schedule_guests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="就餐人数"
        android:textColor="@color/dark"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_4"/>

</LinearLayout>