<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_root_layout"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/padding_6"
                android:background="@drawable/selected_table_item_background_orange"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_table_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMiddle"
                android:text="1号桌"/>

            <TextView
                android:id="@+id/tv_table_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleSmall"
                android:text="6人"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_table_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStyleLarge"
            android:text="18120787531"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_table_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStyleSmall"
            android:text="未点菜"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_4"
        android:visibility="gone"
        android:src="@drawable/yes"/>

</RelativeLayout>