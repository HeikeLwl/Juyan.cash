<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_root_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/padding_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_is_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:text="凉拌黄瓜"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_18"/>

            <TextView
                android:id="@+id/tv_dish_extras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:text="（规格，做法）"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_18"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_4"
            android:paddingRight="@dimen/padding_4"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_reduce_selector"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:textColor="@color/dark"/>

        <ImageButton
            android:id="@+id/ib_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_4"
            android:paddingRight="@dimen/padding_4"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_add_selector"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dish_discount_rate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_16"
                android:textColor="@color/theme_0_red_0"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_dish_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_16"
                android:textColor="@color/dark"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_dish_discount_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_16"
                android:textColor="@color/dark"
                android:gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_can_discount"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/padding_4"
            android:src="@drawable/iv_discount"/>

    </RelativeLayout>

</LinearLayout>