<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/item_root_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding_6"
                                    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_table_item_background_red"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_table_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMiddle"
                android:text="1号桌"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_table_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleLarge"
                android:text="已开台"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_table_seat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMiddle"
                android:text="4座"
                android:textColor="@color/white"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_4"
            android:visibility="gone"
            android:src="@drawable/yes"/>

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding_4"
            android:visibility="gone"
            android:src="@drawable/yellow_schedule"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>