<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="24dp">

    <android.support.v7.widget.CardView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/padding_12"
                android:paddingLeft="@dimen/padding_30"
                android:paddingRight="@dimen/padding_24"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="预定桌位"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <TextView
                        android:id="@+id/tv_table_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/in"
                        android:padding="@dimen/padding_6"
                        android:hint="必选"
                        android:textSize="@dimen/font_16"
                        android:textColorHint="@color/theme_0_red_0"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="客户姓名"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_6"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_16"
                        android:hint="选填"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="就餐人数"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <EditText
                        android:id="@+id/et_schedule_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_6"
                        android:layout_weight="1"
                        android:hint="必填"
                        android:inputType="number"
                        android:textSize="@dimen/font_16"
                        android:textColorHint="@color/theme_0_red_0"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="联系电话"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="必填"
                        android:inputType="phone"
                        android:textSize="@dimen/font_16"
                        android:textColorHint="@color/theme_0_red_0"
                        android:padding="@dimen/padding_6"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="预定时间"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <TextView
                        android:id="@+id/tv_schedule_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/search"
                        android:padding="@dimen/padding_6"
                        android:layout_weight="1"
                        android:hint="必选"
                        android:textSize="@dimen/font_16"
                        android:textColorHint="@color/theme_0_red_0"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="备注信息"
                        android:textSize="18sp"
                        android:textColor="@color/dark"/>

                    <TextView
                        android:id="@+id/tv_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="@dimen/padding_6"
                        android:layout_weight="1"
                        android:lines="2"
                        android:hint="选填"
                        android:textSize="@dimen/font_16"
                        android:layout_marginLeft="@dimen/padding_12"
                        android:background="@drawable/edittext_background_0"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/padding_18"
                    android:background="@drawable/red_button_selector"
                    android:text="预定"
                    android:textSize="@dimen/padding_18"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>