<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/item_root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_status_background_selector_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_table_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMiddle"
                android:text="1号桌"/>

            <TextView
                android:id="@+id/tv_table_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleLarge"
                android:text="已结账"/>

            <TextView
                android:id="@+id/tv_table_seat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMiddle"
                android:text="6座"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/yellow_schedule"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>